<H1>you are now on the comments page</H1>
<%= form_for @comment, url: '#' do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>

<div id="comments">
  <%= render @comments %>
</div>
